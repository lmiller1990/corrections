<!DOCTYPE html>
<html>
  <head>
    <title>Correction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if notice %>
      <%= notice %>
    <% end %>

    <% if alert %>
      <%= alert %>
    <% end %>

    <div class="container-fluid mt-2">
      <div class="row">
        <div class="col-2">
          <%= render partial: 'nav' %>
        </div>

        <div class="col-9">
          <%= yield %>
        </div>

        <div class="col-1">
          <!-- placeholder -->
        </div>
      </div>

    </div>
  </body>
</html>
