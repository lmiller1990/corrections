<h1>Sign Up</h1>

<%= form_with model: @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, autofocus: true %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit 'Sign up' %>
<% end %>
