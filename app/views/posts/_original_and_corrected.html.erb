<div id="original-and-corrected">
  <div class="text min-margin">
    <h3>Original</h3>
    <div id="original">
      <%= simple_format @post[:original_text] %>
    </div>
  </div>

  <div class="text min-margin">
    <h3>Corrected</h3>

    <div id="corrected">
      <%= simple_format @post[:corrected_text] || "#{@post.status.humanize}. Check back soon!" %>
    </div>
  </div>
</div>

